{
  "version": 2,
  "builds": [
    {
      "src": "./server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "./client/dist",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "./server/server.js"
    }
  ],

  "routes": [{ "src": "/[^.]+", "dest": "/", "status": 200 }]
}
